<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/matteChineseBlack"
    >
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:gravity="center"
        android:background="@drawable/carbon_main_attention"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/user_email"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:ellipsize="start"
            android:gravity="center"
            android:hint="Username or email"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:background="@drawable/carbon_depressed_edit_text"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/user_password"
            android:inputType="textPassword"
            android:gravity="center"
            android:singleLine="true"
            android:imeOptions="actionSend"
            android:hint="Password"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:background="@drawable/carbon_depressed_edit_text"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/carbon_main_attention"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Login"
            android:id="@+id/login_button"
            android:background="@drawable/carbon_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Register"
            android:id="@+id/register_button"
            android:background="@drawable/carbon_attention_getter_button"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            />
    </RelativeLayout>
</RelativeLayout>
